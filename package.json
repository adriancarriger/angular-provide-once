    "source-map-loader": "0.1.6",
    "ts-helpers": "1.1.2",
    "tslint": "4.4.2",
    "tslint-loader": "3.3.0",
    "typescript": "2.1.6",
    "webpack": "2.2.1",
    "zone.js": "0.7.6"
